<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE4B5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:background="#FFE4B5"
            android:id="@+id/expend_Layout">
            <ImageView
                android:id="@+id/expend_btn"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/expend"
                android:visibility="gone"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/area_item"
                android:textAlignment="center"
                android:textSize="12sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/current_confirmed_count_item"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginRight="2dp"
            android:background="#FFE4B5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/confirmed_count_item"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginRight="2dp"
            android:background="#FFE4B5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/dead_count_item"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginRight="2dp"
            android:background="#FFE4B5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/cured_count_item"
            android:textAlignment="center"
            android:textSize="16sp"
            android:background="#FFE4B5"/>
    </LinearLayout>

</LinearLayout>